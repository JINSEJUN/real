<h2>초간단 회원가입</h2>



<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="container">
  
  <div class="row field">
    <%= f.label :email, class:"col-lg-1" %>
    <%= f.email_field :email, autofocus: true, :placeholder => "e-mail을 입력해주세요", class: "col-lg-11" %>  
  </div>

<br>

  <div class="row field">
    <%=f.label :password, class:"col-lg-1" %>
    <%= f.password_field :password, autocomplete: "off", :placeholder => "비밀번호(8자리이상)를 입력해주세요", class: "col-lg-11" %>
  </div>

<br>

  <div class="row field">
    <%=f.label :password_confirmation, class:"col-lg-1" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "비밀번호를 확인합니다", class: "col-lg-11" %>
  </div>


<br>
<br>
     
     
<div id="radio">
  <div class="row field">
    <%=f.label :sex, class:"col-lg-1" %>
      <%= f.radio_button :sex, "남자", :id=>"radio1", checked:true %>
      <label for="radio1" class="col-lg-5">남자</label>
      
      <%= f.radio_button :sex, "여자", :id=>"radio2" %>
      <label for="radio2" class="col-lg-6">여자</label>
  </div>
</div>

<br>
  

  <div class="row field">
    <%=f.label :age, class:"col-lg-1" %>
    <%= f.text_field :age, autofocus: true, :placeholder => "나이는 몇살인가요?(숫자만)", class: "col-lg-11" %>
  </div>
  
<br>

  <div class="row field">
    <%=f.label :univ , class:"col-lg-1" %>
    <div class="col-lg-11" style="text-align:left !important; ">
      <%= f.select :univ, options_for_select([['대학교선택','대학교선택'],['연세대학교','연세대학교'],['인하대학교','인하대학교']], params[:univ])%>
    </div>
  </div>
    
  <br>
  
  <div class="row field">
    <%= f.label :number , class:"col-lg-1" %>
    <%= f.text_field :number, autofocus: true, :placeholder => "연락처를 입력해주세요", class: "col-lg-11" %>
  </div>
  
  <br>
  
  <div class="row field">
    <%= f.label :Face_img , class:"col-lg-1" %>
    <%= f.file_field :img, autofocus: true,  class: "col-lg-11" %>
  </div>
    
  <!-- END -->
<br>
<br>

  <div class="actions">
     <%= f.submit "가입하기",class:"btn btn-lg btn-success btn-block btn-submit" %>  
  </div>
<% end %>
</div>


